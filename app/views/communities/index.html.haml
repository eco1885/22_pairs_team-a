.ui-view_class
  .main.box_community_view.contents_padding
    = render partial: "pairs/shared/advertising"
    .common_page_header.mb0
      %span.page_tile.icon_square.mt10.mbo.ml0.mr10
        コミュニティをさがす
      = link_to "コミュニティとは？","", class: "link_help"
    .box_community_header.common_inline_box
      %form.form_search_word
        .search_input
          %input.input_search_word.pr50{placeholder: "コミュニティを検索"}
          %button.button_search.button_f.button_blue_a
            検索作成予定
      %div
        = form_tag(communities_path, method: "get") do
          = label_tag :community_name, "コミュニティ名を入れよう"
          = text_field_tag :community_name, params[:community_name], placeholder: "コミュニティを検索だよん"
          %br
          = label_tag :name, "カテゴリーを検索する場所"
          = select_tag :category, options_for_select(Community.categories), prompt: "カテゴリから探す"
          = submit_tag "検索"

    .box_wrapper_inner
      .box_community_side
      .box_community_main
        / 参加コミュ一覧ゾーン
        .box_my_community
          .data-community-joined-communities
            .my_community_title.title_b
              あなたが参加しているコミュニティ(全
              %span.community_total x
              件)
            .community_list_box.bg-white
              %ul.my_community_list
                - @communities.each do |community|
                  / 0件の場合、コメント類は特に何も表示されない。
                  / = community.users.count
                  %li.my_community_item
                    %a{href: "/community/#{community.id}", class: "community_link"}
                      %p.box_community_item_img
                        = image_tag community.image.url, class:"community_item_img image-round"
                      %p.community_item_title
                        = community.community_name
                      %p.community_item_count
                        / 本来は人数を表示するエリア
                        = t("enums.community.category.#{community.category}")
            .box_community_pager.box_pager
              = paginate(@communities)
        .box_everyone_community.popular_community
          .data-community-popular-communities
            .everyone_community_title
              /人気コミュニティ（本来実装されている箇所）
              ※現在、作成されているコミュニティ一覧
              / 仮表示
              = Community.count
              件
            .community_list_box
              %ul.community_list
                - @communities_all.each do |community|
                  %li.community_item.joined
                    %a{href: "/community/#{community.id}", class: "community_link"}
                      .box_community_item_img
                        = image_tag community.image.url, class:"community_item_img image-round"
                      %p.community_item_title
                        = community.community_name
                      %p.community_item_count
                        / 本来は人数を表示するエリア
                        = t("enums.community.category.#{community.category}")
            .link_more_community
              作る方針（予定）
              .div
                %a#load_button_populer
                  もっと見る
                %a#load_button_populer
                  全てみる
        .box_everyone_community.recommend_community
          .data-community-recommend-communities
            .everyone_community_title
              / おすすめコミュニティ（本来実装されている箇所）
              ※検索結果表示
              / 仮表示
              = Community.count
              件
            .community_list_box
              %ul.community_list
                / - @communities_result.each do |community| if文分岐作成したら（0の場合、エラーになるため）
                - @communities_result.each do |community|
                  %li.community_item.joined
                    %a{href: "/community/#{community.id}", class: "community_link"}
                      .box_community_item_img
                        = image_tag community.image.url, class:"community_item_img image-round"
                      %p.community_item_title
                        = community.community_name
                      %p.community_item_count
                        / 本来は人数を表示するエリア
                        = t("enums.community.category.#{community.category}")
            .link_more_community
              作る方針（予定）
              .div
                %a#load_button_populer
                  もっと見る
                %a#load_button_populer
                  全てみる
        .box_everyone_community.newcomer_community
          .data-community-new-communities
            .everyone_community_title
              新着コミュニティ（作成予定）
        .box_everyone_community.fame_community
          .data-community-fame-communities
            .everyone_community_title
              殿堂入りコミュニティ（作成予定）

